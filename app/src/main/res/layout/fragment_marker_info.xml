<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_location_container" />

    <TextView
        android:id="@+id/tvEntryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tripsans_bold"
        android:text="Title"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/textColor"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_location_container"
        android:layout_marginHorizontal="30dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">


            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="11dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_location"
                android:background="@drawable/rounded_location_icon_container" />

            <TextView
                android:id="@+id/tvEntryLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/tripsans_bold"
                android:text="location"
                android:layout_gravity="start"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_description_container"
        android:layout_marginHorizontal="30dp"
        android:gravity="start"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/tvEntryDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/tripsans_regular"
            android:text="Description"
            android:alpha="0.75"
            android:padding="20dp"
            android:gravity="start"
            android:layout_gravity="top"
            android:textColor="@color/textColor"
            android:textSize="16sp" />
    </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpEntryImages"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/input_box" />
</LinearLayout>